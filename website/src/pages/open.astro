---
import Figure from "../components/Figure.astro";
import { sw } from "../components/consts";
import { open } from "../components/figures";
import { L1, L5, R2, R5 } from "../components/fingers";

const dx1 = -100
const dx2 = -20
---

<Figure figure={open}>
    <g fill="blue" stroke-width="0" text-anchor="middle">
        <text x={L1.cx + dx1} y={L1.cy-40}>L1f</text>
        <text x={L1.cx - dx1} y={L1.cy+90}>L1n</text>
        <text x={R2.cx + dx2} y={R2.y+125}>R2n</text>
        <text x={R2.cx + dx2} y={R2.y-100}>R2f</text>
        <text x={L5.cx + dx1} y={L5.cy + 60}>L5n</text>
        <text x={L5.cx - dx1} y={L5.cy-70}>L5f</text>
   </g>
    <g fill="none" stroke="blue" stroke-width={sw/3} stroke-linecap="round">
        <path stroke-dasharray="8% 42%" d="M161.0520206787018 935.614645987965 L161.0520206787017 199.614645987965"/>
        <path stroke-dasharray="8% 60%" d="M219.12472483803572 974.417586353439 L1103.4060379911457 608.1362734923308"/>
        <path stroke-dasharray="8% 60%" d="M219.12472483803546 164.24908031322775 L1103.4060374926673 530.5303929678594"/>
        <path stroke="green" stroke-dasharray="30% 80%" stroke-dashoffset="-13%" d="M161.0520206787018 935.614645987965 L161.0520206787017 199.614645987965"/>
    </g>
</Figure>